{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2020"],
    "module": "es2022",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
